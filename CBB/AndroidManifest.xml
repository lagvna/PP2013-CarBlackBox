<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cbb"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
	<uses-permission android:name="android.permission.CAMERA" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cbb.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cbb.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.cbb.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.cbb.RecordingsActivity"
            android:label="@string/title_activity_recordings" >
        </activity>
        <activity
            android:name="com.cbb.LibraryActivity"
            android:label="@string/title_activity_library" >
        </activity>
        <activity
            android:name="com.cbb.RecActivity"
            android:label="@string/title_activity_rec" >
        </activity>
        <activity
            android:name="com.cbb.CreditsActivity"
            android:label="@string/title_activity_credits" >
        </activity>
    </application>

</manifest>
