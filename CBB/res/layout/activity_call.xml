<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">
    <RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"  
		android:gravity="center_horizontal"
		android:background="@drawable/titlebar">
        <TextView
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ZadzwoÅ„"
            android:textColor="@color/white"
            android:layout_margin="10sp"
            android:textSize="25sp">
            
        </TextView>
    </RelativeLayout>

    <LinearLayout 
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/black"
		android:orientation="horizontal"
		android:gravity="center_vertical|center_vertical"
		android:layout_weight="1">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"  
			android:gravity="center"
			android:background="@color/black"
			android:layout_weight="1">
        	<ImageButton
	            android:id="@+id/emergencyButton"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:background="@drawable/emerg_selector"
            	android:onClick="callEmergency"/>
        </LinearLayout>

   	</LinearLayout>
   	
    <RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"  
		android:gravity="center_horizontal"
		android:background="@drawable/titlebar"
		android:layout_weight="0">
       
    </RelativeLayout>
    
   	<LinearLayout 
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/black"
		android:orientation="horizontal"
		android:gravity="center"
		android:layout_weight="1">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"  
			android:gravity="center"
			android:background="@color/black"
			android:layout_weight="1">
        	<ImageButton
	            android:id="@+id/contactButton"
            	android:background="@drawable/ice_selector"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:onClick="callContact"/>
		</LinearLayout>

   	</LinearLayout>
</LinearLayout>